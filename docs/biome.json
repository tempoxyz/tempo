{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!specs/lib", "!snippets/unformatted"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useLiteralKeys": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "html": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/ph.js", "**/google6bae3dfb1e9772fa.html"],
      "files": {
        "maxSize": 1
      },
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      },
      "javascript": {
        "formatter": {
          "enabled": false
        },
        "linter": {
          "enabled": false
        }
      },
      "html": {
        "formatter": {
          "enabled": false
        }
      }
    }
  ]
}
